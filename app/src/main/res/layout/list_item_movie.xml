<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/list_item_movie_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/list_item_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/list_item_movie_image"
        android:layout_toEndOf="@+id/list_item_movie_image"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/list_item_overview_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_title_text_view"
        android:layout_toRightOf="@+id/list_item_movie_image"
        android:layout_toEndOf="@+id/list_item_movie_image"
        android:layout_alignLeft="@+id/list_item_title_text_view"
        android:layout_alignStart="@+id/list_item_title_text_view"
        android:textColor="@color/gray"
        />

</RelativeLayout>
